
@{
    ViewBag.Title = "NovosItens";
    Layout = "~/Views/Shared/_LayoutSistemaLim.cshtml";
}

<div class="page-header border-bottom-0">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Novos Itens</span> - Instituto Equilibrio Wal Mendes </h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>

    </div>
</div>
<!-- /page header -->
<!-- Content area -->




<div class="content pt-0">

    <!-- Inner container -->
    <div class="d-md-flex align-items-md-start">


        <!-- Right content -->
        <div class="tab-content w-100">
            <div class="tab-pane fade active show" id="profile">
                <!-- Profile info -->
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title">Novos Itens do Sistema</h5>
                        <div class="header-elements">
                            <div class="list-icons">
                                <a class="list-icons-item" data-action="collapse"></a>
                                <a class="list-icons-item" data-action="reload"></a>
                                <a class="list-icons-item" data-action="remove"></a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <form action="#">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Anamnese</label>
                                        <input type="text" id="txtAnamnese" class="form-control">
                                    </div>

                                </div>
                            </div>


                            <div class="text-right">
                                <input id="btnCadAnamnese" type="button" class="btn btn-success" value="Cadastar">
                                @*<button type="submit" class="btn bg-success-400 ml-3">Cadastrar <i class="icon-more ml-2"></i></button>*@

                            </div>
                        </form>
                    </div>
                    <div class="card-body">
                        <form action="#">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Ponto de Aplicação</label>
                                        <input type="text" id="txtPontoAp" class="form-control">
                                    </div>

                                </div>
                            </div>


                            <div class="text-right">
                                <input id="btnCadPonto" type="button" class="btn btn-success" value="Cadastar">
                                @*<button type="submit" class="btn bg-success-400 ml-3">Cadastrar <i class="icon-more ml-2"></i></button>*@

                            </div>
                        </form>
                    </div>

                </div>
                <!-- /profile info -->
            </div>

        </div>
        <!-- /right content -->

    </div>
    <!-- /inner container -->

</div>




