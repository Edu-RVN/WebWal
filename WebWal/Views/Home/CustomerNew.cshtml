@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Cliente</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="icon_house_alt"></i> Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Cliente</li>

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="akame-contact-area bg-gray section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center">
                    <h2>Eduardo Negreiros</h2>
                    <p>Cliente desde 19 de junho de 2023</p>
                </div>
            </div>
        </div>
        <div class="row" id="img-teste">
            <div class="col-12"></div>
            <form action="#" method="post" class="akame-contact-form border-0 p-0">
                <div class="row">
                    <img id="teste" src="~/Content/TemplateAk/img/bg-img/33.jpg" alt="">
                </div>
            </form>
        </div>
        <div class="col-12">
            <div class="section-heading text-center topo ">
                <p>Preencha os dados do cliente</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">

                <form action="#" method="post" class="akame-contact-form border-0 p-0">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="Nome">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="Endereço">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="Bairro">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="Cidade">
                        </div>
                        <div class="col-lg-6">
                            <input type="date" name="message-name" class="form-control mb-30" placeholder="Data Nascimento">
                        </div>
                        <div class="col-lg-6">
                            <input type="email" name="message-email" class="form-control mb-30" placeholder="Email">
                        </div>
                        <div class="col-lg-6">
                            <input type="number" name="message-email" max="99" class="form-control mb-30"
                                   placeholder="idade">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-email" class="form-control mb-30" placeholder="Celular">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="CPF">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="message-name" class="form-control mb-30" placeholder="RG">
                        </div>
                        <div class="col-12">
                            <input type="file" name="arquivo" class="form-control mb-30" placeholder="Sua foto">
                        </div>
                        <div class="col-12 text-center">
                            <button type="submit" class="btn akame-btn btn-3 mt-15 active">Post Comment</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</section>